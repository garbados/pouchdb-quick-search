{
  "name": "pouchdb-quick-search",
  "version": "2.0.0",
  "description": "PouchDB Quick Search - full-text search for PouchDB",
  "main": "index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/nolanlawson/pouchdb-quick-search.git"
  },
  "keywords": [
    "pouch",
    "pouchdb",
    "plugin",
    "couch",
    "couchdb",
    "fts",
    "full-text",
    "search"
  ],
  "authors": [
    "Nolan Lawson <nolan.lawson@gmail.com>",
    "Diana Thayer <garbados@gmail.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nolanlawson/pouchdb-quick-search/issues"
  },
  "scripts": {
    "release": "npm run test && npm run build && npm run build:min",
    "build": "browserify -o dist/pouchdb.quick-search.js index.js ",
    "build:min": "uglifyjs -mc -o dist/pouchdb.quick-search.min.js dist/pouchdb.quick-search.js",
    "test": "npm run test:lint && npm run test:node && npm run test:browser",
    "test:lint": "standard && dependency-check --unused --no-dev .",
    "test:node": "mocha",
    "test:browser": "mochify test.js",
    "cov": "npm run cov:node && npm run cov:browser && nyc report",
    "cov:node": "nyc -s npm run test:node",
    "cov:browser": "nyc -s --no-clean --instrument false mochify --transform [ babelify --ignore [ test ] --plugins [ babel-plugin-istanbul ] ] test.js",
    "coveralls": "npm run cov && nyc report --reporter=text-lcov > lcov.info"
  },
  "dependencies": {
    "lunr": "^2.3.9"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^6.1.1",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "dependency-check": "^4.1.0",
    "mocha": "^9.2.2",
    "mochify": "^9.2.0",
    "nyc": "^15.1.0",
    "pouchdb": "^7.3.0",
    "standard": "^17.0.0",
    "uglify-js": "^3.15.4"
  }
}
